{
  "name": "GitStub",
  "description": "Recommends GitHub projects",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.github.com/*"
  ],
  "content_scripts": [
    {
      "matches" : [ "*://*.github.com/*" ],
      "css" : ["style.css"],
      "js" : [ "data_col.js", "recommend.js"]
    }
  ],
  "web_accessible_resources" : [
    "github_APITOKEN"
  ],
  "manifest_version": 2
}
